<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEvento">

    <EditText
        android:id="@+id/et_TituloEventoEdit"
        android:layout_width="210dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:hint="TÃ­tulo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEdit" />

    <EditText
        android:id="@+id/et_ContenidoEdit"
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:hint="Contenido"
        android:inputType="text|textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_TituloEventoEdit" />

    <Spinner
        android:id="@+id/sp_LugarEdit"
        android:layout_width="261dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ContenidoEdit" />

    <EditText
        android:id="@+id/et_fechaEdit"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:hint="Fecha (YYYY-MM-DD)"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_LugarEdit" />

    <EditText
        android:id="@+id/et_tipoEdit"
        android:layout_width="263dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:hint="Tipo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_fechaEdit" />

    <Button
        android:id="@+id/btn_editarEventoEdit"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:text="Editar Evento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_tipoEdit" />

    <TextView
        android:id="@+id/textViewEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Edita tu evento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>